public class ChallengeTwo
{
	public void ForLoop()
    {
		for(Integer i = 1; i <= 10; i++)
        {
            system.debug(i);
        }
    }
    
    public void WhileLoop()
    {
        Integer i = 0;
        
        while(i < 10)
        {
            system.debug(i);
            
            i++;
        }
    }
    
    public void Iffy()
    {
        Boolean valueToCheck = false;
        
        if(valueToCheck)
        {
            system.debug('Value is true!');
        }
        else
        {
            system.debug('Value is false!');
        }
    }
